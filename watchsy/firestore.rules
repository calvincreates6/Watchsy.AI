rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Existing rules for users and their data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      / Allow public read of privacy settings for sharing
      match /privacy/settings {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User votes - only the user can read/write their own votes
      match /votes/{movieId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User lists (watchlist, liked, watched)
      match /{listType}/{movieId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public links for sharing
    match /publicLinks/{slug} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Movie vote aggregates - public read, no direct client writes
    match /movieVotes/{movieId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
